<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/tagLayout"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    >
                    <com.project.me.notes.VerticalTextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:textColor="@android:color/white"
                        android:background="@android:color/holo_blue_dark"
                        android:layout_gravity="center|end"
                        android:textAlignment="textEnd"
                        android:text="Tags...I need more tags..."
                        android:textSize="20sp" />

                </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="My title"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_toRightOf="@id/tagLayout"
                />
            <ImageView
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:background="@drawable/ic_lens_black_24dp"
                android:src="@drawable/ic_movie_black_24dp"/>
            <ImageView
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/ic_lens_black_24dp"
                android:layout_toLeftOf="@id/video"
                android:src="@drawable/ic_audiotrack_black_24dp"/>
            <!--<View
                style="@style/Divider"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>-->
            <View
                android:id="@+id/divider"
                android:layout_height="1dp"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/tagLayout"
                android:layout_width="match_parent"
                android:weight="1dp"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:text="My text\ntext\ntext\ntext\ntext\ntext\ntext\ntext"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_toRightOf="@id/tagLayout"
                />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:text="Current date"
                android:textColor="@color/colorPrimary"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>